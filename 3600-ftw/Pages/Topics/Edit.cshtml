@page "{id:Guid?}"
@namespace CSCI3600.Pages.Topics
@model EditModel

@{
    ViewData["Title"] = "Edit Topic";
}

<h1>Edit a Topic</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Topic.Id" />
    <div class="mb-3">
        <label asp-for="Topic.Title"></label>
        <input asp-for="Topic.Title" class="form-control" />
        <span asp-validation-for="Topic.Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Topic.Hours"></label>
        <input asp-for="Topic.Hours" class="form-control" />
        <span asp-validation-for="Topic.Hours" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Topic.Description"></label>
        <textarea asp-for="Topic.Description" class="form-control"></textarea>
        <span asp-validation-for="Topic.Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <input class="btn btn-primary" type="submit" value="Save" />
        <a class="btn btn-secondary" href="~/Topics/Details/@Model.Topic.Id">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
